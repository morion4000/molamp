<% if flash[:notice] %>
<div class="alert">
  <button type="button" class="close" data-dismiss="alert">×</button>
  <strong>Hurray!</strong> <%= flash[:notice] %>
</div>
<% end %>

<% if logged_in? and not current_user.claimed and controller.controller_name == 'users' and controller.action_name != 'claim' %>
	<div class="alert alert-info">
	  <button type="button" class="close" data-dismiss="alert">×</button>
	  <strong>Unclaimed!</strong> You account is unclaimed. <%= link_to 'Click here to claim it', account_claim_path %>.
	</div>
<% end %>

<% if 0 == 1 %>
<div class="alert">
  <button type="button" class="close" data-dismiss="alert">×</button>
  <strong>Warning!</strong> We are experiencing some problems with the YouTube player API at the moment. The tracks are not buffering properly.
</div>
<% end %>
