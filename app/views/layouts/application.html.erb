<div class="container" style="width:900px">
	<div class="navbar">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">Molamp.net</a>
          <div class="nav-collapse">
            <ul class="nav">
              
            </ul>
            <ul class="nav pull-right">
              <li class="divider-vertical"></li>
              <li class="dropdown">
              	<% if cookies[:lastfm_session] %>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= cookies.signed[:lastfm_user] %> <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Profile', '/users/' + cookies.signed[:lastfm_user] %></li> 
                  <li class="divider"></li>
                  <li><a href="/auth/logout">Logout</a></li>
                </ul>
                <% else %>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Sign in <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><a href="http://www.last.fm/api/auth/?api_key=<%= APP_CONFIG['lastfm_api_key'] %>">Sign in with Last.fm</a></li>
                </ul>
                <% end %>
              </li>
            </ul>
            <form class="navbar-search pull-right" action="/search">
              <input type="hidden" name="w" value="generic" />
              <input type="text" name="q" class="search-query span2" placeholder="Search">
            </form>
          </div><!-- /.nav-collapse -->
        </div>
      </div><!-- /navbar-inner -->
    </div>	
	
