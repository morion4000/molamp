<!DOCTYPE html>
<html lang="en">
<%= render :partial => 'shared/head' %>
<body>

<%= render :partial => 'shared/widgets/facebook' %>
<%= render :partial => 'shared/widgets/twitter' %>
<%= render :partial => 'shared/widgets/lastfm' %>

<div class="container main_content">
	<%= render :partial => 'shared/header' %>
	
	<div id="application_main_content">
		<%= yield %>
	</div>
</div>

<div id="application_footer">
	<%= render :partial => 'shared/controls' %>
	
	<div class="container footer_content">
		<%= render :partial => 'shared/footer' %>
	</div>
</div>

<%= render :partial => 'shared/widgets/uservoice' %>

<%= render :partial => 'shared/modals' %>

<%= render :partial => 'shared/debug' %>

<%= javascript_include_tag "pages/"+controller.controller_name, "pages/all" %>

</body>
</html>
