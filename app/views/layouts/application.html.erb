	<% if flash[:notice] %>
	<div class="alert">
	  <button type="button" class="close" data-dismiss="alert">×</button>
	  <strong>Hurray!</strong> <%= flash[:notice] %>
	</div>
	<% end %>
	
	<% if 0 == 1 %>
	<div class="alert">
	  <button type="button" class="close" data-dismiss="alert">×</button>
	  <strong>Warning!</strong> We are experiencing some problems with the YouTube player API at the moment. The tracks are not buffering properly.
	</div>
	<% end %>
	
	<div class="well">
		<%= yield %>
	</div>
	
	<div class="row-fluid">
  		<div class="span11">
  			<footer class="footer">
				<p>
					&copy; <%= Date.today.year %> Molamp <sup><span class="label label-info">beta</span></sup>. 
					Made with <a href="http://twitter.github.com/bootstrap/" target="_blank">Bootstrap</a>. 
					Powered by <a href="http://www.last.fm" target="_blank"><img src="/assets/lastfm_icon.png" alt="Last.fm" /></a>.<br />
