<div class="hero-unit">
	<h1>Discover your music</h1>
	<p>For every artist you listen, you can can discover new ones.</p>
	
	<br />

	<form name="search" method="GET" action="/search">
		<input type="hidden" name="w" value="home" />
		
		<div class="input-append">
			<input class="span4" name="q" type="text" data-provide="typeahead" placeholder="Black Sabbath, Joy Division, Queen...">
			<button class="btn" type="submit"><i class="icon-search"></i></button>
		</div>
	</form>
</div>

<div>
	<%= 
		if logged_in?
			render 'dashboard'
		else
			render 'static'
		end
	%>
</div>
