<% title 'Sign In'%>

<div style="text-align: center">
	<h1>Sign In</h1>
	
	<%= form_for @user_session, :url => user_session_path do |f| %>
	
	  <% if @user_session.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@user_session.errors.count, "error") %> prohibited this user from being saved:</h2>
	
	      <ul>
	      <% @user_session.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
	  
	  <%= f.label :email %>
	  <%= f.text_field :email %><br />
	  <br />
	  <%= f.label :password %>
	  <%= f.password_field :password %><br />
	  <br />
	  <%= f.check_box :remember_me %> <%= f.label :remember_me, :style => 'display:inline;' %><br />
	  <br />
	  <div><%= f.submit 'Sign In', :class => 'btn btn-large' %></div>
	  <br />or<br /><br />
	  <div><%= link_to 'Login with Facebook', '/auth/facebook', :class => 'btn btn-primary' %></div>
	  
	<% end %>
</div>
